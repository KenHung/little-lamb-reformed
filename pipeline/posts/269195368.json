\uff0c\u5728\u67d0\u4e9b\u6642\u5019\uff0c\u53ef\u4ee5\u505a\u70ba\u53c3\u8003\u5de5\u5177\u3002<br>\u5b83\u7684\u6027\u8cea\uff0c\u6bd4\u8f03\u5c6c\u65bc\u5de5\u5177\u66f8\uff0c\u800c\u975e\u795e\u8056\u7121\u8aa4\u7684\u8056\u7d93\u3002<br><br><br>\u65e2\u7136\u662f\u5de5\u5177\u66f8\uff0c\u6211\u5011\u5c31\u5343\u842c\u4e0d\u8981\u904e\u5ea6\u9ad8\u8209\u4efb\u4f55\u4eba\u7684\u89e3\u7d93\u66f8\u7c4d\u3002<br>\u53ea\u8981\u8a18\u5f97\uff0c\u90a3\u662f\u4e00\u7a2e\u53c3\u8003\u7528\u7684\u66f8\u7c4d\u5373\u53ef\u3002<br>\u8b80\uff0c\u7576\u7136\u6c92\u95dc\u4fc2\uff1b<br>\u7576\u6210\u5fc5\u8b80\u6216\u7cbe\u8b80\uff0c\u90a3\u5012\u4e0d\u9700\u8981\u3002<br><br><br>\u5728\u6b64\uff0c\u6211\u4e5f\u8981\u8d81\u6b64\u6a5f\u6703\u63d0\u9192\u6211\u5011\u805a\u6703\u6240\u7684\u5f1f\u5144\u59ca\u59b9\u3002<br>\u8cb4\u6703\u5f88\u9ad8\u8209\u6062\u5fa9\u7248\u7684\u8056\u7d93\u3002<br>\u800c\u4e14\uff0c\u5f88\u591a\u4eba\u4e5f\u5f88\u9ad8\u8209\u6062\u5fa9\u7248\u8056\u7d93\u4e2d\u7684\u7d93\u6587\u8a3b\u91cb\u3002<br>\u4f46\u8acb\u807d\u4e0b\u6211\u7684\u63d0\u9192\uff1a<br>\u90a3\u4e0d\u904e\u662f\u674e\u5e38\u53d7\u7684\u8a3b\u91cb\uff0c\u548c\u773e\u591a\u5beb\u51fa\u8a3b\u91cb\u66f8\u7684\u4f5c\u8005\u4e00\u6a23\uff0c\u90fd\u662f\u6709\u7f6a\u6709\u8aa4\u7684\u4eba\uff0c\u4e0d\u662f\u7121\u7f6a\u7121\u8aa4\u7684\u795e\u3002<br>\u4e5f\u8acb\u807d\u4e0b\u6211\u7684\u52f8\uff1a<br>\u65e2\u7136\u53ea\u662f\u500b\u4eba\u7684\u8a3b\u91cb\uff0c\u5730\u4f4d\u5176\u5be6\u53ea\u9700\u548c\u4e00\u822c\u8a3b\u91cb\u66f8\u4e00\u6a23\u5373\u53ef\uff0c\u4e0d\u7528\u7576\u6210\u5fc5\u9808\u548c\u8056\u7d93\u4e00\u8d77\u5ff5\u4e0d\u53ef\uff0c\u4e5f\u4e0d\u662f\u975e\u5f97\u8b80\u4ed6\u500b\u4eba\u7684\u8a3b\u91cb\u4e0d\u53ef\uff0c\u4e5f\u4e0d\u662f\u4e0d\u80fd\u6216\u4e0d\u9700\u95b1\u8b80\u5176\u4ed6\u4eba\u7684\u8a3b\u91cb\u3002<br>\u6062\u5fa9\u7248\u7684\u8056\u7d93\uff0c\u628a\u674e\u5e38\u53d7\u7684\u8a3b\u91cb\u5408\u5728\u8056\u7d93\u88e1\uff0c\u4e00\u8d77\u51fa\u7248\u3002<br>\u7576\u7136\uff0c\u9019\u662f\u4e00\u7a2e\u5584\u610f\uff0c\u5e6b\u52a9\u4fe1\u5f92\u8b80\u7d93\u6642\u80fd\u6709\u8a3b\u91cb\u53ef\u8b80\u3002<br>\u7136\u800c\uff0c\u5f9e\u53e6\u4e00\u89d2\u5ea6\u800c\u8a00\uff0c\u9019\u8c48\u4e0d\u662f\u67d0\u7a2e\u7a0b\u5ea6\u7684\u9ad8\u8209\u500b\u4eba\u73fe\u8c61\uff0c\u5c07\u500b\u4eba\u7684\u8a3b\u91cb\u8996\u540c\u5408\u9069\u548c\u8056\u7d93\u540c\u5217\u7684\u7a0b\u5ea6\uff1f\u6216\u662f\u8996\u70ba\u4fe1\u5f92\u4eba\u4eba\u90fd\u5fc5\u9808\u95b1\u8b80\u7684\u7a0b\u5ea6\uff1f<br>\u4e00\u822c\u7684\u8056\u7d93\uff0c\u5c31\u53ea\u662f\u8056\u7d93\uff0c\u8a3b\u91cb\u66f8\u5247\u662f\u53e6\u5916\u8cfc\u8cb7\u3002<br>\u6709\u4e9b\u8056\u7d93\uff0c\u6703\u5c07\u8a3b\u91cb\u6216\u4e32\u73e0\u4e00\u8d77\u7de8\u5beb\uff0c\u4f46\u9019\u985e\u7684\u8056\u7d93\uff0c\u901a\u5e38\u4e5f\u4e0d\u6703\u4eba\u4eba\u90fd\u8cfc\u8cb7\u3002<br>\u4f46\u8cb4\u6703\u7684\u8056\u7d93\uff0c\u6050\u6015\u662f\u4eba\u624b\u4e00\u672c\uff0c\u800c\u9019\u9ebc\u591a\u4eba\u8b80\u8056\u7d93\u6642\u4e5f\u5728\u8b80\u674e\u5e38\u53d7\u500b\u4eba\u7684\u8a3b\u91cb\uff0c\u9019\u4e5f\u771f\u7684\u975e\u5e38\u9a5a\u4eba\u3002<br>\u6211\u9019\u8a71\u8aaa\u5f97\u6bd4\u8f03\u91cd\uff0c\u4f46\u78ba\u5be6\u662f\u51fa\u65bc\u5584\u610f\u7684\u63d0\u9192\u3002<br>\u4e0d\u6eff\u610f\u7684\uff0c\u7121\u9700\u70ba\u6b64\u505a\u9032\u4e00\u6b65\u8a0e\u8ad6\u8207\u89e3\u91cb\u3002<br><br><br>\u5728\u6b64\uff0c\u4e5f\u8d81\u6b64\u6a5f\u6703\u544a\u8a34\u6709\u5728\u95b1\u8b80\u6062\u5fa9\u7248\u8056\u7d93\u3001\u95b1\u8b80\u674e\u5e38\u53d7\u8a3b\u91cb\u7684\u975e\u805a\u6703\u6240\u5f1f\u5144\u59ca\u59b9\u3002<br>\u95b1\u8b80\u8a3b\u91cb\uff0c\u4e0d\u662f\u4ec0\u9ebc\u932f\uff0c\u4f46\u8acb\u8a18\u4f4f\uff1a<br>\u9019\u53ea\u662f\u67d0\u500b\u4eba\u7684\u8a3b\u91cb\uff0c\u53ea\u662f\u4e00\u7a2e\u53c3\u8003\u5de5\u5177\uff0c\u4e0d\u662f\u8056\u7d93\uff0c\u4e0d\u662f\u7d55\u5c0d\u771f\u7406\u3002<br><br><br>\u53e6\u5916\uff0c\u8acb\u5c0f\u5fc3\u51fa\u7248\u8a3b\u91cb\u66f8\u7684\u51fa\u7248\u793e\u3002<br>\u901a\u5e38\uff08\u4e0d\u662f\u7d55\u5c0d\uff09\uff0c\u770b\u51fa\u7248\u793e\u540d\u7a31\uff0c\u5c31\u77e5\u9053\u8a72\u51fa\u7248\u793e\u8def\u7dda\u662f\u65b0\u6d3e\u3001\u798f\u97f3\u6d3e\uff0c\u9084\u662f\u9748\u6069\u6d3e\u3002<br>\u5c0d\u65bc\u65b0\u6d3e\u8207\u9748\u6069\u6d3e\u8def\u7dda\u51fa\u7248\u793e\u7684\u66f8\uff0c\u9700\u8981\u6bd4\u8f03\u7559\u610f\u5c0f\u5fc3\u3002<br><br><br>\u53f0\u8a9e\u9577\u8001\u6703\u51fa\u7248\u7684\u66f8\uff0c\u6211\u90fd\u4e0d\u5efa\u8b70\u8cfc\u8cb7\u3002<br>\u88e1\u9762\u5e38\u6703\u6df7\u6709\u65b0\u6d3e\u795e\u5b78\u601d\u60f3\u3002<br>\u9664\u975e\u81ea\u5df1\u6709\u80fd\u529b\u5206\u8fa8\uff0c\u5426\u5247\u4e0d\u5efa\u8b70\u4e00\u822c\u4fe1\u5f92\u4f7f\u7528\u3002<br>\u6bd4\u8d77\u798f\u97f3\u6d3e\u4e2d\u7684\u963f\u6c11\u5ff5\u4e3b\u7fa9\uff0c\u65b0\u6d3e\u548c\u9748\u6069\u6d3e\u7684\u89e3\u7d93\u53cd\u800c\u8981\u7279\u5225\u5c0f\u5fc3\uff0c\u76e1\u91cf\u4fdd\u6301\u8ddd\u96e2\uff0c\u4ee5\u7b56\u5b89\u5168\u3002<br><br><br>\u518d\u4f86\uff0c\u89e3\u7d93\u66f8\u6709\u5169\u5927\u985e\uff0c\u9019\u5169\u5927\u985e\u7684\u6027\u8cea\u6709\u5f88\u5927\u7684\u5dee\u8ddd\uff1a<br>1.\t\u8a3b\u89e3\u8a73\u7d30<br>\u9019\u4e00\u7a2e\u4e0d\u6613\u95b1\u8b80\uff0c\u6587\u53e5\u5f88\u56b4\u8b39\uff0c\u5e38\u5e38\u8b1b\u4e00\u5927\u5806\u5e0c\u81d8\u6587\u3001\u5e0c\u4f2f\u4f86\u6587\u8a5e\u6027\u3001\u610f\u7fa9\uff0c\u8b1b\u4e00\u5927\u5806\u54ea\u500b\u7814\u7a76\u8005\u7684\u89c0\u9ede\u662f\u4ec0\u9ebc\u3002<br>\u901a\u5e38\uff0c\u9019\u7a2e\u8a3b\u91cb\u66f8\u90fd\u5f88\u539a\uff0c\u4e0d\u592a\u662f\u7528\u4f86\u5f9e\u982d\u5230\u5c3e\u95b1\u8b80\uff0c\u800c\u662f\u7528\u4f86\u67e5\u8003\u7684\u3002<br>\u6211\u5efa\u8b70\u8981\u8cb7\u7684\u8a71\uff0c\u8981\u8cb7\u9019\u7a2e\u7684\uff0c\u56e0\u70ba\u4f60\u6bd4\u8f03\u80fd\u77e5\u9053\u73fe\u5728\u6709\u591a\u5c11\u7a2e\u5c0d\u9019\u53e5\u7d93\u6587\u7684\u89e3\u91cb\u3002<br>\u4f60\u4e0d\u7528\u63a5\u53d7\u88e1\u9762\u4efb\u4f55\u4e00\u7a2e\u89e3\u91cb\uff0c\u4f46\u8d77\u78bc\u4f60\u80fd\u77e5\u9053\u73fe\u5728\u6709\u90a3\u9ebc\u591a\u7a2e\u5947\u5947\u602a\u602a\u7684\u89e3\u91cb\u3002<br><br><br>2.\t\u9748\u4fee\u3001\u4fe1\u606f\u3001\u8b1b\u9053<br>\u9019\u4e00\u7a2e\u5f88\u597d\u95b1\u8b80\uff0c\u4e5f\u624d\u80fd\u5e6b\u52a9\u6211\u5011\u7372\u5f97\u4fe1\u606f\u3002<br>\u4f46\u662f\uff0c\u9019\u985e\u7684\u89e3\u7d93\u66f8\uff0c\u4e0d\u770b\u91cd\u300e\u8a3b\u91cb\u300f\uff0c\u800c\u770b\u91cd\u300e\u8b1b\u9053\u300f\u3002<br>\u8a3b\u91cb\u96d6\u7136\u6703\u63d0\u5230\uff0c\u4f46\u537b\u4e0d\u6703\u5f88\u56b4\u8b39\u7684\u63d0\u5230\u5404\u5f0f\u5404\u6a23\u7684\u8ad6\u9ede\uff0c\u4e5f\u4e0d\u6703\u8b1b\u592a\u591a\u539f\u6587\u8a5e\u6027\u8207\u610f\u7fa9\u3002<br>\u5047\u4f7f\u8981\u505a\u70ba\u8a3b\u91cb\u5de5\u5177\u66f8\uff0c\u9019\u985e\u66f8\u7c4d\u662f\u4e0d\u5920\u7528\u7684\uff1b<br>\u5047\u4f7f\u8981\u505a\u70ba\u500b\u4eba\u9748\u4fee\uff0c\u9019\u985e\u66f8\u7c4d\u662f\u5f88\u597d\u7684\u3002<br><br><br><br><br><br>\u4ee5\u4e0b\u89e3\u7d93\u66f8\u7c4d\u8207\u7db2\u7ad9\uff0c\u6211\u53ea\u63a8\u85a6\u4e2d\u6587\u7248\u672c\u3002<br>\u82f1\u6587\u7248\u672c\u6211\u4e0d\u6703\uff0c\u4e5f\u6c92\u6709\u7814\u7a76\uff0c\u6240\u4ee5\u6c92\u6709\u63a8\u85a6\u3002<br><br><br>\u5148\u4ecb\u7d39\u4e09\u500b\u514d\u8cbb\u7684\u89e3\u7d93\u7db2\u7ad9\uff1a<br>1.\t\u4fe1\u671b\u611b\u4fe1\u4ef0\u8207\u8056\u7d93\u8cc7\u6e90\u4e2d\u5fc3<br>http://bible.fhl.net/<br>\u6709\u7d93\u6587\u641c\u5c0b\u3001\u7d93\u6587\u8a3b\u91cb\u3002<br><br><br>2.\t\u67e5\u7d93\u8cc7\u6599\u5927\u5168<br>http://www.ccbiblestudy.org/index-T.htm<br>\u6709\u7e41\u9ad4\u4e2d\u6587\u3001\u7c21\u9ad4\u4e2d\u6587\u548c\u82f1\u6587\u7248\u3002<br>\u5168\u672c\u8056\u7d93\u5404\u7d93\u5377\u7684\u8a3b\u91cb\u3002<br><br><br>3.\t\u9053\uff08\u5eb7\u4f86\u660c\u7267\u5e2b\u7db2\u7ad9\uff09<br>http://word.fhl.net/cgi-bin/rogbook.cgi?user=word&bid=2<br>\u6709\u4e00\u4e9b\u65b0\u820a\u7d04\u7d93\u5377\u7684\u89e3\u7d93\u8b1b\u9053\u3002<br><br><br><br><br><br>\u4ee5\u4e0b\u4ecb\u7d39\u6211\u500b\u4eba\u8a8d\u70ba\u4fe1\u4ef0\u7d14\u6b63\u7684\u798f\u97f3\u6d3e\u8056\u7d93\u8a3b\u91cb\u66f8\u7c4d<br><br><br>\u4e00\u3001\u820a\u7d04<br>1.\t\u5275\u4e16\u8a18\uff08\u4e94\u518a\uff09\uff08\u913a\u70b3\u91d7\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>\u5c6c\u65bc\u5929\u9053\u8056\u7d93\u8a3b\u91cb\u7cfb\u5217\u3002<br>\u9664\u4e86\u5c0d\u5404\u7d93\u6587\u7684\u8a73\u7d30\u8a3b\u91cb\u4e4b\u5916\uff0c\u5e38\u5e38\u6709\u9644\u9304\uff0c\u91dd\u5c0d\u5404\u7a2e\u722d\u8b70\u8b70\u984c\u63d0\u51fa\u8b1b\u89e3\u3002<br><br><br>\u4e8c\u3001\u65b0\u7d04<br>1.21\u4e16\u7d00\u65b0\u7d04\u5c0e\u8ad6\uff08\u4e00\u518a\uff09\uff08\u5361\u68ee\u3001\u7a46\u723e\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>\u5361\u68ee\uff08D.A.Carson\uff09\u662f\u73fe\u4ee3\u798f\u97f3\u6d3e\u795e\u5b78\u5927\u5c07\u3002<br>\u4ed6\u7684\u66f8\u7c4d\uff0c\u5927\u5bb6\u53ef\u4ee5\u653e\u5fc3\u95b1\u8b80\u3002<br>\u4ed6\u7684\u89e3\u7d93\u66f8\u975e\u5e38\u512a\u79c0\uff0c\u662f\u5927\u5e2b\u7d1a\u4eba\u7269\u3002<br>\u672c\u66f8\u662f\u65b0\u7d04\u6982\u8ad6\uff0c\u5c0d\u65b0\u7d04\u6574\u9ad4\u8207\u5404\u7d93\u5377\u505a\u51fa\u6982\u8ad6\u3002<br>\u96d6\u7136\u9084\u4e0d\u662f\u5c0d\u500b\u5225\u7d93\u6587\u505a\u51fa\u8a73\u7d30\u8a3b\u89e3\u7684\u8a3b\u91cb\uff0c\u4f46\u537b\u80fd\u5e6b\u52a9\u4fe1\u5f92\u66f4\u6df1\u5165\u77ad\u89e3\u65b0\u7d04\u8056\u7d93\u5404\u7d93\u5377\u80cc\u666f\u8207\u6574\u9ad4\u89c0\u5ff5\u3002<br><br><br>2.\t\u7d04\u7ff0\u798f\u97f3\u8a3b\u91cb\uff08\u4e00\u518a\uff09\uff08\u5361\u68ee\uff09\uff08\u7f8e\u570b\u9ea5\u7a2e\u51fa\u7248\u793e\uff09<br>\u5361\u68ee\u9664\u4e86\u51fa\u7248\u7d04\u7ff0\u798f\u97f3\u7684\u5168\u5377\u89e3\u7d93\u4e4b\u5916\uff0c\u4e5f\u51fa\u7248\u4e86\u4e03\u518a\u8f03\u8584\u7684\u89e3\u7d93\u66f8\uff1a<br>1.\t\u4e3b\u8036\u7a4c\u8207\u795e\u7684\u570b\u5ea6\uff08\u99ac\u592a5-7\u7ae0\uff09<br>2.\t\u7576\u4e3b\u8036\u7a4c\u9762\u5c0d\u4e16\u754c\uff08\u99ac\u592a8-10\u7ae0\uff09<br>3.\t\u4e3b\u8036\u7a4c\u8207\u7942\u7684\u670b\u53cb\uff08\u7d04\u7ff014-17\u7ae0\uff09<br>4.\t\u4fdd\u7f85\u7684\u79b1\u544a\uff08\u76f8\u95dc\u7d93\u5377\uff09<br>5.\t\u8056\u9748\u7684\u5927\u80fd\uff08\u6797\u524d12-14\u7ae0\uff09<br>6.\t\u6210\u529f\u6216\u6210\u719f\uff08\u6797\u5f8c10-13\u7ae0\uff09<br>7.\t\u5341\u67b6\u8207\u4e8b\u5949\uff08\u54e5\u6797\u591a\u524d\u66f8\u8ad6\u9818\u5c0e\uff09<br>\u4ee5\u4e0a\u90fd\u662f\u5f88\u512a\u79c0\u7684\u89e3\u7d93\u66f8\uff0c\u96d6\u7136\u4e0d\u662f\u5230\u5f88\u56b4\u8b39\u3001\u5f88\u8a73\u7d30\u8a3b\u91cb\uff0c\u4f46\u5c0d\u4e00\u4e9b\u91cd\u9ede\u8207\u722d\u8b70\u6709\u76f8\u7576\u597d\u7684\u5206\u6790\u8207\u8b1b\u89e3\u3002<br><br><br>3.\t\u4f7f\u5f92\u884c\u50b3\uff08\u4e09\u518a\uff09\uff08\u5f35\u6c38\u4fe1\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>\u672c\u66f8\u5c6c\u65bc\u5929\u9053\u8056\u7d93\u8a3b\u91cb\u7cfb\u5217\u3002<br>\u5f35\u6c38\u4fe1\u535a\u58eb\u662f\u8fd1\u4ee3\u975e\u5e38\u512a\u79c0\u7684\u5b78\u8005\u3002<br>\u7d14\u6b63\u798f\u97f3\u6d3e\u7684\u7acb\u5834\uff0c\u826f\u597d\u800c\u8a73\u7d30\u7684\u8a3b\u91cb\u6574\u7406\uff0c\u4f7f\u4ed6\u7684\u8056\u7d93\u8a3b\u91cb\u4e5f\u975e\u5e38\u503c\u5f97\u53c3\u8003\u3002<br><br><br>4.\t\u7f85\u99ac\u66f8\u8a3b\u91cb\uff08\u56db\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u6821\u5712\u51fa\u7248\u793e\uff09<br>\u99ae\u852d\u5764\u6559\u6388\u662f\u963f\u6c11\u5ff5\u6d3e\uff0c\u4f46\u505a\u5b78\u554f\u4e0a\u662f\u975e\u5e38\u512a\u79c0\u7684\u570b\u969b\u7c4d\u5b78\u8005\u3002<br>\u4ed6\u7684\u8a3b\u91cb\u66f8\u975e\u5e38\u8a73\u7d30\u6e05\u695a\uff0c\u6703\u8a73\u7d30\u5217\u51fa\u6240\u6709\u7684\u8ad6\u9ede\u3002<br>\u6211\u5011\u95b1\u8b80\u6642\uff0c\u7576\u7136\u4e0d\u7528\u63a5\u53d7\u4ed6\u67d0\u4e9b\u963f\u6c11\u5ff5\u7684\u7d50\u8ad6\uff0c\u4f46\u662f\uff0c\u4f5c\u70ba\u53c3\u8003\u66f8\u7c4d\uff0c\u4ed6\u7684\u89e3\u7d93\u66f8\u771f\u7684\u975e\u5e38\u597d\u3002<br>\u548c\u5361\u68ee\u6559\u6388\u4e00\u6a23\uff0c\u53ea\u8981\u662f\u99ae\u852d\u5764\u6559\u6388\u51fa\u7684\u89e3\u7d93\u66f8\uff0c\u90fd\u503c\u5f97\u53c3\u8003\u3002<br><br><br>5.\t\u7f85\u99ac\u66f8\uff08\u56db\u518a\uff09\uff08\u535a\u611b\u601d\uff09\uff08\u7f8e\u570b\u6d3b\u6cc9\u51fa\u7248\u793e\uff09<br>\u535a\u611b\u601d\uff08Boice\uff09\u662f\u73fe\u4ee3\u6539\u9769\u5b97\u5927\u5c07\uff0c\u662f\u65d7\u5e5f\u9bae\u660e\u7684\u6b78\u6b63\u795e\u5b78\u8def\u7dda\u3002<br>\u4ed6\u7684\u7f85\u99ac\u66f8\u8a3b\u91cb\uff0c\u662f\u8b1b\u9053\u578b\u614b\uff0c\u4f46\u975e\u5e38\u80fd\u5e36\u7d66\u4eba\u4fe1\u606f\u3002<br>\u4ed6\u7684\u8b1b\u9053\uff0c\u5e7e\u4e4e\u662f\u4e00\u7bc0\u4e00\u7bc0\u8b1b\u89e3\uff0c\u800c\u6bcf\u7bc0\u7d93\u6587\u7684\u8b1b\u89e3\uff0c\u5c31\u662f\u4e00\u7bc7\u8b1b\u9053\u3002<br>\u6027\u8cea\u985e\u4f3c\u5510\u5d07\u69ae\u7267\u5e2b\u7684\u5e0c\u4f2f\u4f86\u66f8\u8b1b\u7d93\uff0c\u4f46\u6bcf\u7bc7\u7684\u7bc7\u5e45\u8f03\u5510\u7267\u5e2b\u5c0f\u3002<br>\u9019\u56db\u518a\u5206\u5225\u540d\u7a31\u70ba\uff1a<br>1.\t\u56e0\u4fe1\u7a31\u7fa9\uff081-4\u7ae0\uff09<br>2.\t\u6069\u5178\u505a\u738b\uff085-8\u7ae0\uff09<br>3.\t\u795e\u5728\u6b77\u53f2\u4e2d\uff089-11\u7ae0\uff09<br>4.\t\u65b0\u4eba\u985e\uff0812-16\u7ae0\uff09<br><br><br>6.\u54e5\u6797\u591a\u524d\u66f8\u4f4f\u91cb\uff08\u4e00\u518a\uff09\uff08\u5f35\u6c38\u4fe1\uff09\uff08\u5ba3\u9053\u51fa\u7248\u793e\uff09<br>\u7531\u65bc\u53ea\u6709\u4e00\u518a\uff0c\u672c\u66f8\u7684\u8a3b\u91cb\u8a73\u7d30\u5ea6\u6c92\u6709\u4f7f\u5f92\u884c\u50b3\u90a3\u9ebc\u8a73\u7d30\u3002<br>\u4f46\u4e00\u822c\u7684\u53c3\u8003\u7528\u9014\u800c\u8a00\uff0c\u672c\u66f8\u5df2\u7d93\u8db3\u5920\u3002<br>\u53e6\u5916\uff0c\u5361\u68ee\u6559\u6388\u7684\u300e\u8056\u9748\u7684\u5927\u80fd\uff08\u6797\u524d12-14\u7ae0\uff09\u300f\u3001\u300e\u6210\u529f\u6216\u6210\u719f\uff08\u6797\u5f8c10-13\u7ae0\uff09\u300f\u3001\u300e\u5341\u67b6\u8207\u4e8b\u5949\uff08\u54e5\u6797\u591a\u524d\u66f8\u8ad6\u9818\u5c0e\uff09\u300f\uff0c\u4e5f\u53ef\u4ee5\u8996\u70ba\u54e5\u6797\u591a\u524d\u66f8\u7684\u8a3b\u91cb\u66f8\u7528\u9014\u3002<br><br><br>7.\u52a0\u62c9\u592a\u66f8\u8a3b\u91cb\uff08\u4e8c\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u6821\u5712\u51fa\u7248\u793e\uff09<br>\u99ae\u852d\u5764\u6559\u6388\u51fa\u7684\u89e3\u7d93\u66f8\uff0c\u53cd\u6b63\u4e0d\u7528\u8003\u616e\u592a\u591a\uff0c\u53ef\u4ee5\u8cb7\u5c31\u5c0d\u4e86\u3002<br>\u53ea\u662f\u6211\u9084\u662f\u8981\u63d0\u9192\u4e00\u4e0b\uff0c\u4ed6\u5c6c\u65bc\u963f\u6c11\u5ff5\u4e3b\u7fa9\uff0c\u6240\u4ee5\u67d0\u4e9b\u7d50\u8ad6\u90e8\u5206\uff0c\u4e0d\u7528\u592a\u5728\u610f\u3002<br><br><br>8.\t\u8153\u7acb\u6bd4\u66f8\uff08\u4e00\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>9.\t\u5e16\u6492\u7f85\u5c3c\u8fe6\u524d\u66f8\uff08\u4e00\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>10.\t\u5e16\u6492\u7f85\u5c3c\u8fe6\u5f8c\u66f8\uff08\u4e00\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>11.\t\u5e0c\u4f2f\u4f86\u66f8\uff08\u4e8c\u518a\uff09\uff08\u99ae\u852d\u5764\uff09\uff08\u5929\u9053\u51fa\u7248\u793e\uff09<br>\u4ee5\u4e0a\u5747\u5c6c\u65bc\u99ae\u852d\u5764\u6559\u6388\u7684\u89e3\u7d93\u66f8\uff0c\u90fd\u5c6c\u65bc\u5929\u9053\u8056\u7d93\u8a3b\u91cb\u7cfb\u5217\u3002<br>\u5176\u4ed6\u5929\u9053\u8a3b\u91cb\u7cfb\u5217\u7684\u4f5c\u8005\uff0c\u61c9\u8a72\u4e5f\u6709\u5f88\u512a\u79c0\u7684\uff0c\u4f46\u56e0\u70ba\u6211\u4e0d\u719f\uff0c\u6240\u4ee5\u7121\u6cd5\u63a8\u85a6\u3002<br><br><br>12.\t\u555f\u793a\u9304\u4f4f\u91cb\uff08\u4e09\u518a\uff09\uff08\u7f85\u5049\uff09\uff08\u83ef\u795e\u51fa\u7248\u793e\uff09<br>\u7f85\u5049\u662f\u6539\u9769\u5b97\u9663\u71df\u3002<br>\u4ed6\u7684\u555f\u793a\u9304\u8a3b\u91cb\u5beb\u5f97\u5f88\u597d\uff0c\u9664\u4e86\u5404\u7d93\u6587\u7684\u8a73\u7d30\u8a3b\u91cb\u4e4b\u5916\uff0c\u4e5f\u6709\u5927\u91cf\u9644\u9304\u8655\u7406\u722d\u8b70\u554f\u984c\u3002<br>\u7531\u65bc\u5c6c\u6539\u9769\u5b97\u9663\u71df\uff0c\u6240\u4ee5\u5047\u4f7f\u8981\u8cfc\u8cb7\u7684\u8a71\uff0c\u672c\u66f8\u53ef\u4ee5\u5217\u70ba\u512a\u5148\u8003\u616e\u3002<br><br><br>13.\t\u555f\u793a\u9304\u8a3b\u91cb\uff08\u4e8c\u518a\uff09\uff08\u5967\u65af\u90a6\uff09\uff08\u83ef\u795e\u51fa\u7248\u793e\uff09<br>\u5967\u65af\u90a6\uff08Grant R.Osborne\uff09\u662f\u8fd1\u4ee3\u795e\u5b78\u754c\u5927\u5e2b\u7d1a\u4eba\u7269\uff0c\u4ed6\u7684\u300e\u57fa\u7763\u6559\u91cb\u7d93\u624b\u518a\u300f\u662f\u975e\u5e38\u6709\u540d\u7684\u8457\u4f5c\u3002<br>\u9019\u672c\u555f\u793a\u9304\u8a3b\u91cb\uff0c\u4e5f\u662f\u7d14\u6b63\u7684\u798f\u97f3\u6d3e\u7acb\u5834\uff0c\u4ecb\u7d39\u5404\u5bb6\u5b78\u8aaa\u8207\u8ad6\u9ede\u3002<br>\u5047\u4f7f\u7f85\u5049\u7684\u8a3b\u91cb\u66f8\u9084\u5acc\u4e0d\u8db3\u7684\u8a71\uff0c\u672c\u66f8\u53ef\u4ee5\u5217\u70ba\u8cfc\u8cb7\u3002<br><br><br>\u8b1b\u5230\u555f\u793a\u9304\uff0c\u6211\u8981\u63d0\u4e00\u4e0b\u500b\u4eba\u770b\u6cd5\u3002<br>\u73fe\u4eca\u5f88\u591a\u6559\u6703\u5c0d\u672b\u4e16\u8ad6\u5f88\u6709\u8208\u8da3\uff0c\u52d5\u8f12\u5c0d\u672a\u4f86\u505a\u51fa\u9810\u8a00\u8207\u89e3\u91cb\uff0c\u4f46\u5176\u5be6\u5167\u5bb9\u6839\u672c\u662f\u80e1\u8aaa\u516b\u9053\u3001\u602a\u529b\u4e82\u795e\u3001\u4e82\u4e03\u516b\u7cdf\u3001\u5931\u8aa4\u9023\u9023\u3002<br>\u7576\u521d\u76841995\u6f64\u516b\u6708\u4e2d\u5171\u8840\u6d17\u53f0\u7063\u7684\u9810\u8a00\uff0c\u5c31\u662f\u4e00\u500b\u5927\u7b11\u8a71\u3002<br>\u554f\u984c\u662f\uff0c\u7576\u6642\u6709\u591a\u5c11\u57fa\u7763\u5f92\u56e0\u70ba\u76f8\u4fe1\u6b64\u9810\u8a00\uff0c\u800c\u8b8a\u8ce3\u5bb6\u7522\u3001\u8209\u5bb6\u79fb\u6c11\u8c9d\u7406\u65af\u3002<br>\u7576\u6642\u9020\u6210\u7684\u793e\u6703\u6d6e\u52d5\u3001\u6c11\u5fc3\u4e0d\u5b89\uff0c\u5c31\u66f4\u4e0d\u7528\u8b1b\u4e86\u3002<br>\u57fa\u7763\u5f92\u5c0d\u8056\u7d93\u6c92\u8208\u8da3\uff0c\u4e0d\u80af\u8a8d\u771f\u5f9e\u7d2e\u5be6\u56b4\u8b39\u7684\u8b80\u7d93\u4f86\u8a8d\u77e5\u4e0a\u5e1d\u771f\u7406\uff0c\u53ea\u4efb\u6191\u81ea\u5df1\u5fc3\u7406\u63e3\u60f3\u3001\u52d5\u8f12\u8a34\u8af8\u795e\u79d8\u7d93\u9a57\u3001\u52d5\u8f12\u8a8d\u70ba\u4e0a\u5e1d\u76f4\u63a5\u555f\u793a\uff0c\u7136\u5f8c\u505a\u51fa\u4e00\u5927\u5806\u4e0d\u8ca0\u8cac\u4efb\u7684\u672b\u4e16\u8ad6\u9810\u8a00\uff0c\u8a72\u7576\u4f55\u7f6a\uff1f<br>\u4fe1\u5f92\u4e0d\u80af\u597d\u597d\u88dd\u5099\u81ea\u5df1\uff0c\u4e0d\u9858\u7528\u5fc3\u8b80\u7d93\uff0c\u53ea\u60f3\u5230\u8655\u807d\u9810\u8a00\u3001\u7576\u5148\u77e5\uff0c\u7d50\u679c\u6210\u70ba\u611a\u8822\u7684\u8ddf\u5c41\u87f2\uff0c\u8d8a\u4fe1\u8d8a\u7b28\uff0c\u8a72\u7576\u4f55\u7f6a\uff1f<br><br><br>\u73fe\u4eca\uff0c\u611b\u8b1b\u555f\u793a\u9304\u7684\uff0c\u5e38\u5e38\u662f\u6700\u4e0d\u61c2\u555f\u793a\u9304\u7684\uff1b<br>\u611b\u8b1b\u4e0a\u5e1d\u547d\u5b9a\u7684\uff0c\u5e38\u5e38\u662f\u6700\u4e0d\u61c2\u9810\u5b9a\u8ad6\u7684\uff1b<br>\u611b\u8b1b\u8056\u9748\u7684\uff0c\u5e38\u5e38\u662f\u6700\u4e0d\u61c2\u8056\u9748\u7684\u3002<br>\u52a3\u5e63\u9a45\u9010\u826f\u5e63\uff0c\u771f\u7406\u88ab\u5047\u9053\u6df9\u6c92\uff0c\u4fe1\u5f92\u96a8\u6ce2\u9010\u6d41\uff1b<br>\u5047\u9053\u96a8\u8655\u53ef\u807d\uff0c\u771f\u7406\u975e\u5e38\u96e3\u5c0b\uff1b<br>\u4fe1\u5f92\u96d6\u591a\u3001\u6559\u6703\u96d6\u5927\uff0c\u4f46\u5e38\u5e38\u662f\u7a7a\u5fc3\u7684\uff0c\u597d\u50cf\u6f32\u5927\u7684\u6c23\u7403\uff0c\u4e00\u6839\u7d30\u91dd\u4e00\u523a\u5c31\u7834\u3002<br><br><br>\u9858\u6211\u5011\u4e0d\u662f\u90a3\u4e9b\u5230\u8655\u8ddf\u6d41\u884c\u7684\u4eba\uff0c<br>\u800c\u662f\u9858\u610f\u8a8d\u771f\u56de\u5230\u8056\u7d93\uff0c\u8a8d\u771f\u8b80\u7d93\u79b1\u544a\uff0c\u5047\u4f7f\u53ef\u4ee5\uff0c\u5c31\u4e0b\u5de5\u592b\u5728\u7d93\u6587\u7814\u7fd2\u7684\u4eba\u3002<br>\u4e0d\u8981\u88ab\u5404\u5f0f\u5404\u6a23\u7684\u5047\u9053\u8ff7\u60d1\uff0c\u90a3\u4e9b\u9053\u90fd\u5f88\u597d\u807d\uff0c\u4f46\u7528\u8056\u7d93\u6aa2\u9a57\uff0c\u5c31\u77e5\u9053\u6839\u672c\u7d93\u4e0d\u8d77\u6aa2\u9a57\u3002<br>\u56de\u5230\u8056\u7d93\u4f86\uff0c\u505a\u500b\u667a\u6167\u7684\u4eba\u3002<br>\u9858\u4e0a\u5e1d\u5e6b\u52a9\u6211\u5011\u3002<br><br><br><br><br><br>\u5c0f\u5c0f\u7f8a<br>", "images": [], "first_published_at": null}