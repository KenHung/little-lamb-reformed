0e\u5efa\u570b\u767e\u5e74\u7b49\u65bc\u8056\u7d93\u96d9\u79a7\u5e74\u300f\u7684\u7db2\u8def\u6d41\u50b3\u3002<br><!--more-->\u5efa\u570b\u767e\u5e74\u7b49\u65bc\u96d9\u79a7\u5e74\u9019\u7a2e\u8aaa\u6cd5\uff0c\u662f\u5f9e\u53f0\u7063\u7684\u9748\u6069\u6d3e\u6559\u6703\u50b3\u51fa\u4f86\u7684\u3002<br>\u4ed6\u5011\u7684\u7406\u8ad6\u5176\u5be6\u5f88\u7c21\u55ae\uff1a<br>1.\t\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u4e00\u767e\u5e74<br>2.\t\u820a\u7d04\u8056\u7d93\u88e1\u6bcf\u4e94\u5341\u5e74\u5c31\u662f\u79a7\u5e74<br>3.\t\u6240\u4ee5\u9019\u5c31\u662f\u8056\u7d93\u88e1\u7684\u96d9\u79a7\u5e74<br>\u7136\u5f8c\uff0c\u5c31\u958b\u59cb\u5927\u8086\u767c\u63ee\uff0c\u8b1b\u51fa\u4e00\u5927\u5806\u6709\u7684\u6c92\u7684\u6771\u897f\u51fa\u4f86\u3002<br><br><br>\u6211\u5f88\u9a5a\u8a1d\u7684\u662f\uff0c\u9019\u9ebc\u96e2\u8b5c\u7684\u6771\u897f\uff0c\u7adf\u7136\u9084\u4e00\u5927\u5806\u4eba\u4fe1\uff0c\u6216\u662f\u4e0d\u77e5\u9053\u9019\u662f\u932f\u8aa4\u7684\u6771\u897f\uff1f<br><br><br>\u932f\u5728\u54ea\u88e1\uff1f<br>\u932f\u8aa4\u4e00\u5927\u5806\uff01\u6211\u53ea\u7c21\u55ae\u5217\u8209\u4e00\u4e9b\uff1a<br><br><br>\u4e00\u3001\t\u5982\u4f55\u8a08\u7b97\uff1f<br>\u4e2d\u83ef\u6c11\u570b\u78ba\u5be6\u5efa\u570b\u4e00\u767e\u5e74\uff0c\u4f46\u554f\u984c\u662f\uff0c\u7576\u4eca\u7684\u4e2d\u83ef\u6c11\u570b\uff0c\u4e3b\u8981\u53ea\u5269\u53f0\u7063\u3002<br>\u4e26\u4e14\uff0c\u9019\u500b\u570b\u865f\uff0c\u4e2d\u570b\u653f\u5e9c\u4e0d\u627f\u8a8d\uff0c\u4e16\u754c\u5927\u91cf\u570b\u5bb6\u4e5f\u4e0d\u627f\u8a8d\u3002<br>\u53f0\u7063\u65bc\u897f\u51431895\u5e74\uff0c\u4f9d\u64da\u99ac\u95dc\u689d\u7d04\uff0c\u7531\u6e05\u671d\u5272\u8b93\u7d66\u65e5\u672c\uff0c\u5f9e\u6b64\u53f0\u7063\u6210\u70ba\u65e5\u672c\u9818\u571f\u3002<br>\u7136\u5f8c\u53f0\u7063\u65bc1945\u5e74\uff0c\u4e2d\u83ef\u6c11\u570b\u653f\u5e9c\u65bc\u53f0\u5317\u8209\u884c\u53d7\u964d\u5100\u5f0f\u3002<br>\u4e2d\u570b\u5927\u9678\u65bc\u897f\u51431949\u5e74\uff0c\u7531\u4e2d\u83ef\u4eba\u6c11\u5171\u548c\u570b\u653f\u5e9c\u7d71\u6cbb\u3002<br>\u8acb\u554f\uff1a\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u5143\u5e74\uff0c\u7576\u6642\u53f0\u7063\u662f\u54ea\u500b\u653f\u5e9c\u7d71\u6cbb\uff1f<br>\u662f\u65e5\u672c\u653f\u5e9c\uff01<br>\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u6642\uff0c\u53f0\u7063\u4e26\u975e\u4e2d\u570b\u83ef\u6c11\u570b\u9818\u571f\uff01<br>\u6240\u4ee5\uff0c\u53f0\u7063\u5230\u5e95\u7b97\u662f\u4ec0\u9ebc\u6642\u5019\u624d\u7b97\u662f\u4e2d\u83ef\u6c11\u570b\u7684\uff1f<br>\u6700\u57fa\u672c\u6700\u5bec\u5927\u7684\u8a08\u7b97\uff0c\u4e5f\u5fc5\u9808\u653e\u5230\u897f\u51431945\u5e74\uff0c\u4e5f\u5c31\u662f\u6c11\u570b\u4e09\u5341\u56db\u5e74\u3002<br>\u4f46\u4e2d\u83ef\u6c11\u570b\u653f\u5e9c\u65bc\u4e2d\u570b\u53c8\u5728\u6c11\u570b\u4e09\u5341\u516b\u5e74\u5c31\u300c\u4ea1\u570b\u300d\u4e86\uff08\u9019\u662f\u8523\u4ecb\u77f3\u7e3d\u7d71\u81ea\u5df1\u89aa\u53e3\u8aaa\u7684\uff0c\u8a18\u9304\u65bc1950\u5e74\u7248\u7684\u300e\u8523\u7e3d\u7d71\u96c6\u300f\u3002\u4f46\u9019\u6bb5\u8a71\u65bc1974\u5e74\u7684\u7248\u672c\u4e2d\u6d88\u5931\uff09\u3002<br>\u6240\u4ee5\uff0c\u5728\u53f0\u7063\uff0c\u6176\u795d\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u4e00\u767e\u5e74\uff1f\u65e5\u671f\u8a72\u5982\u4f55\u8a08\u7b97\uff1f<br>\uff08\u9019\u6bb5\u8ad6\u8ff0\uff0c\u8acb\u4e0d\u7528\u4f86\u5c0d\u6211\u8a0e\u8ad6\u8207\u767c\u8868\u8a55\u8ad6\u3002\u53cd\u6b63\u807d\u807d\u5c31\u597d\uff0c\u4e0d\u63a5\u53d7\u8acb\u4fbf\u3002<br>\u56e0\u70ba\uff0c\u4e0b\u9762\u9084\u6709\u5f88\u591a\u91cd\u9ede\uff09<br><br><br>\u6211\u8b1b\u9019\u4e9b\uff0c\u662f\u8981\u8868\u660e\uff0c\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u767e\u5e74\u7528\u5728\u53f0\u7063\uff0c\u662f\u5f88\u6709\u722d\u8b70\u7684\u3002<br>\u57fa\u7763\u5f92\u9762\u5c0d\u9019\u7a2e\u722d\u8b70\u7684\u653f\u6cbb\u8b70\u984c\uff0c\u4e0d\u5b9c\u592a\u8f15\u6613\u548c\u8056\u7d93\u626f\u4e0a\u53bb\uff0c\u8b8a\u6210\u4ee5\u795e\u4e4b\u540d\u4f86\u795e\u529f\u8b77\u9ad4\u3002<br>\u7562\u7adf\uff0c\u5f88\u591a\u653f\u6cbb\u8b70\u984c\uff0c\u90fd\u4e0d\u662f\u7d55\u5c0d\u771f\u7406\uff0c\u800c\u662f\u76f8\u5c0d\u9818\u57df\u3002<br>\u76f8\u5c0d\u9818\u57df\u88e1\uff0c\u6211\u5011\u8981\u5c0f\u5fc3\uff0c\u4e0d\u8981\u96a8\u4fbf\u626f\u4e9b\u4e0a\u5e1d\u3001\u8056\u7d93\u3002<br>\u6709\u57fa\u7763\u5f92\u60f3\u5728\u53f0\u7063\u6176\u795d\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u767e\u5e74\uff0c\u5f88\u597d\uff0c\u611f\u8b1d\u4e3b\uff0c\u6211\u5011\u5c0a\u91cd\u3002<br>\u6709\u57fa\u7763\u5f92\u4e0d\u60f3\u5728\u53f0\u7063\u6176\u795d\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u767e\u5e74\uff0c\u4e5f\u5f88\u597d\uff0c\u4e5f\u611f\u8b1d\u4e3b\uff0c\u6211\u5011\u4e00\u6a23\u5c0a\u91cd\u3002<br>\u4f46\u662f\uff0c\u5047\u4f7f\u6709\u57fa\u7763\u5f92\u81bd\u6562\u4ee5\u795e\u4e4b\u540d\u795e\u529f\u8b77\u9ad4\uff0c\u642c\u51fa\u8056\u7d93\u8aaa\u5efa\u570b\u767e\u5e74\u5c31\u662f\u96d9\u79a7\u5e74\uff0c\u90a3\u6211\u5011\u4e0d\u8981\u96a8\u4fbf\u8ddf\u96a8\uff01<br><br><br><br><br>\u4e8c\u3001\t\u53f0\u7063\u662f\u795e\u6b0a\u570b\u5bb6\uff1f<br>\u7576\u4eca\u53f0\u7063\u662f\u795e\u6b0a\u570b\u5bb6\uff0c\u57fa\u7763\u6559\u662f\u570b\u6559\uff1f<br>\u5426\u5247\uff0c\u5c31\u7b97\u4e2d\u83ef\u6c11\u570b\u5efa\u570b\u4e00\u767e\u5e74\uff0c\u8207\u8056\u7d93\u88e1\u7684\u79a7\u5e74\u4f55\u5e72\uff1f<br>\u653f\u6cbb\u4e0a\u7684\u5e74\u4ee3\u8a08\u7b97 \uff1d \u4e0a\u5e1d\u570b\u7684\u5e74\u4ee3\u8a08\u7b97\uff1f<br>\u5404\u671d\u4ee3\u7684\u5e74\u4ee3\u8a08\u7b97 \uff1d \u820a\u7d04\u8056\u7d93\u7684\u5e74\u4ee3\u8a08\u7b97\uff1f<br>\u57fa\u7763\u6559\u5f92\u6bd4\u8f03\u5049\u5927\uff0c\u5168\u570b\u90fd\u8981\u7167\u57fa\u7763\u6559\u7684\u6771\u897f\u4f86\u641e\uff1f<br>\u66f4\u4f55\u6cc1\uff0c\u9019\u7a2e\u641e\u6cd5\uff0c\u9084\u4e0d\u662f\u57fa\u7763\u5f92\u90fd\u540c\u610f\u5462\uff01<br>\u82e5\u9019\u6a23\u641e\u7684\u8a71\uff0c\u90a3\u662f\u4e0d\u662f\u4f5b\u6559\u5f92\u3001\u9053\u6559\u5f92\u3001\u56de\u6559\u5f92\u3001\u3001\u3001\u90fd\u8a72\u51fa\u4f86\u5927\u558a\u4e00\u5957\u7167\u4ed6\u5011\u81ea\u5df1\u7d93\u5178\u4f86\u8a08\u7b97\u7684\u6771\u897f\uff0c\u7136\u5f8c\u8981\u6c42\u570b\u6c11\u8207\u653f\u5e9c\u4f9d\u7167\u8a72\u5b97\u6559\u898f\u5b9a\u4f86\u9075\u5b88\u6216\u5949\u884c\uff1f<br><br><br><br><br>\u4e09\u3001\t\u820a\u7d04\u7684\u79a7\u5e74\u898f\u5b9a\uff0c\u7576\u4eca\u6c11\u4e3b\u793e\u6703\u88e1\uff0c\u80fd\u5be6\u884c\u55ce\uff1f<br>\u300e\u7b2c\u4e94\u5341\u5e74\uff0c\u4f60\u5011\u8981\u7576\u4f5c\u8056\u5e74\uff0c\u5728\u904d\u5730\u7d66\u4e00\u5207\u7684\u5c45\u6c11\u5ba3\u544a\u81ea\u7531\u3002\u9019\u5e74\u5fc5\u70ba\u4f60\u5011\u7684\u79a7\u5e74\uff0c\u5404\u4eba\u8981\u6b78\u81ea\u5df1\u7684\u7522\u696d\uff0c\u5404\u6b78\u672c\u5bb6\u3002\u7b2c\u4e94\u5341\u5e74\u8981\u4f5c\u70ba\u4f60\u5011\u7684\u79a7\u5e74\u3002\u9019\u5e74\u4e0d\u53ef\u8015\u7a2e\uff1b\u5730\u4e2d\u81ea\u9577\u7684\uff0c\u4e0d\u53ef\u6536\u5272\uff1b\u6c92\u6709\u4fee\u7406\u7684\u8461\u8404\u6a39\u4e5f\u4e0d\u53ef\u6458\u53d6\u8461\u8404\u3002\u56e0\u70ba\u9019\u662f\u79a7\u5e74\uff0c\u4f60\u5011\u8981\u7576\u4f5c\u8056\u5e74\uff0c\u5403\u5730\u4e2d\u81ea\u51fa\u7684\u571f\u7522\u3002\u9019\u79a7\u5e74\uff0c\u4f60\u5011\u5404\u4eba\u8981\u6b78\u81ea\u5df1\u7684\u5730\u696d\u3002\u300f\uff08\u522925\uff1a10-13\uff09<br>\u300e\u5230\u4e86\u79a7\u5e74\uff0c\u5730\u696d\u8981\u51fa\u8cb7\u4e3b\u7684\u624b\uff0c\u81ea\u5df1\u4fbf\u6b78\u56de\u81ea\u5df1\u7684\u5730\u696d\u300f\uff08\u522925\uff1a29\uff09<br>\uff08\u5176\u4ed6\u7d93\u6587\u7565\u904e\uff09<br><br><br>\u8056\u7d93\u5728\u8b1b\u4ec0\u9ebc\uff1f<br>\u8056\u7d93\u8b1b\u7684\u662f\uff1a<br>1.\t\u4f60\u53bb\u9280\u884c\u62b5\u62bc\u7684\u571f\u5730\uff0c\u9280\u884c\u5728\u79a7\u5e74\u8981\u7121\u689d\u4ef6\u9084\u7d66\u4f60\u3002<br>2.\t\u4f60\u5728\u9019\u5e74\u4e0d\u51c6\u5de5\u4f5c\u3002<br>3.\t\u4f60\u8cb7\u7684\u623f\u5730\u7522\u7684\u571f\u5730\uff0c\u5728\u79a7\u5e74\u9019\u5e74\uff0c\u8981\u6b78\u9084\u8ce3\u65b9\u3002<br><br><br>\u9019\u6771\u897f\uff0c\u73fe\u4eca\u80fd\u4e0d\u80fd\u5be6\u884c\uff1f\u53ef\u4e0d\u53ef\u80fd\u5be6\u884c\uff1f<br>\u81ea\u5df1\u7528\u9ede\u667a\u5546\uff0c\u8166\u888b\u60f3\u4e00\u60f3\uff01<br><br><br>\u5047\u4f7f\u9f13\u5439\u79a7\u5e74\u7684\u7267\u5e2b\u6709\u7a2e\uff0c\u8acb\u544a\u8a34\u4fe1\u5f92\uff1a<br>1.\t\u53bb\u5411\u9280\u884c\u8aaa\uff0c\u6211\u8981\u7167\u8056\u7d93\uff0c\u8acb\u5c07\u6211\u8cb8\u6b3e\u7684\u571f\u5730\u9084\u7d66\u6211\u3002<br>2.\t\u53bb\u5c0d\u8001\u95c6\u8aaa\uff0c\u6211\u4eca\u5e74\u8981\u7167\u8056\u7d93\uff0c\u4e0d\u7528\u5de5\u4f5c\u3002<br>3.\t\u4e26\u4e14\uff0c\u8acb\u57fa\u7763\u5f92\u5c07\u81ea\u5df1\u8cb7\u7684\u623f\u5b50\u7684\u571f\u5730\u4e3b\u52d5\u6b78\u9084\u539f\u8ce3\u65b9\uff0c\u4e26\u4e14\u8a18\u5f97\uff0c\u7267\u5e2b\u81ea\u5df1\u4e5f\u8981\u9019\u6a23\u505a\uff01<br><br><br><br><br>\u56db\u3001\t\u66f4\u7c21\u55ae\u7684\u5b89\u606f\u5e74\u5462\uff1f\u70ba\u4f55\u4e0d\u5927\u8086\u9f13\u5439\uff1f<br>\u6bd4\u8d77\u56f0\u96e3\u5ea6\u6975\u9ad8\u7684\u79a7\u5e74\uff0c\u5176\u5be6\uff0c\u5b89\u606f\u5e74\u662f\u66f4\u7c21\u55ae\u7684\u898f\u5b9a\u3002<br>\u9019\u4e9b\u7267\u5e2b\u8207\u6559\u6703\uff0c\u70ba\u4f55\u4e0d\u9f13\u5439\u5b89\u606f\u5e74\u5462\uff1f<br><br><br>\u300e\u7b2c\u4e03\u5e74\uff0c\u5730\u8981\u5b88\u8056\u5b89\u606f\uff0c\u5c31\u662f\u5411\u8036\u548c\u83ef\u5b88\u7684\u5b89\u606f\uff0c\u4e0d\u53ef\u8015\u7a2e\u7530\u5730\uff0c\u4e5f\u4e0d\u53ef\u4fee\u7406\u8461\u8404\u5712\u3002\u907a\u843d\u81ea\u9577\u7684\u838a\u7a3c\u4e0d\u53ef\u6536\u5272\uff1b\u6c92\u6709\u4fee\u7406\u7684\u8461\u8404\u6a39\u4e5f\u4e0d\u53ef\u6458\u53d6\u8461\u8404\u3002\u9019\u5e74\uff0c\u5730\u8981\u5b88\u8056\u5b89\u606f\u3002\u5730\u5728\u5b89\u606f\u5e74\u6240\u51fa\u7684\uff0c\u8981\u7d66\u4f60\u548c\u4f60\u7684\u50d5\u4eba\u3001\u5a62\u5973\u3001\u96c7\u5de5\u4eba\uff0c\u4e26\u5bc4\u5c45\u7684\u5916\u4eba\u7576\u98df\u7269\u3002 \u9019\u5e74\u7684\u571f\u7522\u4e5f\u8981\u7d66\u4f60\u7684\u7272\u755c\u548c\u4f60\u5730\u4e0a\u7684\u8d70\u7378\u7576\u98df\u7269\u3002\u300f\uff08\u522925\uff1a4-7\uff09<br><br><br>\u8acb\u9019\u4e9b\u7267\u5e2b\u544a\u8a34\u4fe1\u5f92\uff1a<br>1.\t\u6bcf\u4e03\u5e74\u5c31\u4e0d\u7528\u5de5\u4f5c\u4e00\u5e74\uff0c\u8acb\u57fa\u7763\u5f92\u53bb\u5411\u8001\u95c6\u8aaa\uff0c\u4f60\u5011\u8981\u9075\u5b88\u5b89\u606f\u5e74\u3002<br>2.\t\u6bcf\u4e03\u5e74\u5c31\u4e0d\u7528\u5de5\u4f5c\u4e00\u5e74\uff0c\u8acb\u57fa\u7763\u5f92\u8001\u95c6\u5168\u90e8\u95dc\u9580\u95dc\u5ee0\u505c\u6b62\u71df\u696d\uff0c\u9075\u5b88\u5b89\u606f\u5e74\u3002<br><br><br>\u5b89\u606f\u5e74\u505a\u4e0d\u5230\u55ce\uff1f<br>\u6709\u56f0\u96e3\u55ce\uff1f<br>\u66f4\u7c21\u55ae\u7684\u5b89\u606f\u5e74\u90fd\u505a\u4e0d\u5230\u4e86\uff0c\u8b1b\u4ec0\u9ebc\u79a7\u5e74\u5462\uff1f<br><br><br>\u9075\u5b88\u8056\u7d93\uff0c\u662f\u57fa\u7763\u5f92\u61c9\u76e1\u7684\u672c\u5206\u3002<br>\u4f46\u5047\u4f7f\u57fa\u7763\u5f92\u641e\u4e0d\u6e05\u695a\u72c0\u6cc1\uff0c\u4e82\u89e3\u7d93\uff0c\u641e\u4e0d\u6e05\u695a\u820a\u7d04\u7d93\u6587\u4ee3\u5982\u4f55\u5728\u73fe\u4eca\u7684\u61c9\u7528\uff0c\u6211\u5011\u6703\u5012\u5927\u6963\u54e6\uff01<br>\u7267\u5e2b\u8166\u888b\u4e0d\u6e05\u695a\uff0c\u9023\u9f13\u5439\u5b89\u606f\u5e74\u90fd\u4e0d\u6562\uff0c\u7d50\u679c\u51fa\u4f86\u9f13\u5439\u79a7\u5e74\uff0c\u7adf\u7136\u4e00\u5927\u5806\u4eba\u4fe1\u5f97\u4e00\u584c\u7cca\u5857\u4e86\uff1f<br>\u57fa\u7763\u5f92\u600e\u9ebc\u6703\u8d8a\u4fe1\u8d8a\u7b28\u5462\uff1f<br>\u4e00\u500b\u6703\u4f7f\u4eba\u8d8a\u4fe1\u8d8a\u7b28\u7684\u4fe1\u4ef0\uff0c\u600e\u6703\u662f\u771f\u4fe1\u4ef0\u5462\uff1f<br><br><br><br><br>\u4e94\u3001\t\u9023\u65b0\u7d04\u6642\u4ee3\u90fd\u5f9e\u4f86\u6c92\u5be6\u884c\u904e\u7684\u6771\u897f\uff0c\u6211\u5011\u5728\u558a\u4e9b\u4ec0\u9ebc\u554a\uff1f<br>\u79a7\u5e74\u9019\u6771\u897f\uff0c\u662f\u820a\u7d04\u898f\u5b9a\u3002<br>\u820a\u7d04\u6642\u4ee3\u7684\u4ee5\u8272\u5217\u4eba\u6c92\u6709\u9075\u5b88\uff08\u4ed6\u5011\u6c92\u9075\u5b88\u7684\u53ef\u591a\u4e86\uff09\uff0c\u5f8c\u4f86\u4ed6\u5011\u4ea1\u570b\u4e86\u3002<br>\u5f8c\u4f86\u7336\u592a\u4eba\u6b78\u56de\uff0c\u554f\u984c\u662f\uff0c\u4ed6\u5011\u5f9e\u6b64\u5c31\u6709\u5b88\u904e\u79a7\u5e74\u55ce\uff1f<br>\u5225\u8aaa\u662f\u79a7\u5e74\uff0c\u9023\u5b89\u606f\u5e74\u4e5f\u662f\uff0c\u4ed6\u5011\u5f8c\u4f86\u5c31\u6709\u5b88\u904e\u55ce\uff1f<br>\u9019\u9ebc\u91cd\u8981\u7684\u6771\u897f\uff0c\u70ba\u4ec0\u9ebc\u798f\u97f3\u66f8\u548c\u65b0\u7d04\u66f8\u4fe1\u9023\u63d0\u90fd\u4e0d\u63d0\uff0c\u4e0d\u52aa\u529b\u53eb\u5927\u5bb6\u8981\u53bb\u5b88\u5b89\u606f\u5e74\u548c\u79a7\u5e74\u5462\uff1f<br>\u9019\u9ebc\u91cd\u8981\u7684\u6771\u897f\uff0c\u4e3b\u8036\u7a4c\u4ee5\u53ca\u4f7f\u5f92\u5011\uff0c\u600e\u9ebc\u90fd\u6c92\u53eb\u4fe1\u5f92\u8981\u52aa\u529b\u53bb\u9075\u5b88\u5b89\u606f\u5e74\u548c\u79a7\u5e74\u5462\uff1f<br>\u9023\u57fa\u7763\u6559\u6210\u70ba\u7f85\u99ac\u5e1d\u570b\u7684\u570b\u6559\u3001\u9023\u5929\u4e3b\u6559\u5168\u76db\u6642\u671f\uff0c\u90fd\u6c92\u4eba\u7b28\u5230\u53bb\u9f13\u5439\u79a7\u5e74\u548c\u5b89\u606f\u5e74\uff0c\u6211\u5011\u662f\u5728\u9f13\u5439\u4e9b\u4ec0\u9ebc\u5462\uff1f<br>\u4e2d\u4e16\u7d00\u5929\u4e3b\u6559\u660f\u5eb8\u8ff7\u4fe1\u5230\u6975\u9ede\uff0c\u9023\u4ed6\u5011\u90fd\u6bd4\u6211\u5011\u9084\u6709\u667a\u6167\uff01<br>\u7576\u4eca\u7684\u7267\u5e2b\u8207\u4fe1\u5f92\uff0c\u7adf\u7136\u8d8a\u4fe1\u8d8a\u7b28\uff1f<br><br><br><br><br>\u516d\u3001\t\u4e3b\u8036\u7a4c\u5df2\u7d93\u6210\u5c31\u4e86\uff0c\u61c2\u4e0d\u61c2\u554a\uff1f<br>\u300e\u6709\u4eba\u628a\u5148\u77e5\u4ee5\u8cfd\u4e9e\u7684\u66f8\u4ea4\u7d66\u4ed6\uff0c\u4ed6\u5c31\u6253\u958b\uff0c\u627e\u5230\u4e00\u8655\u5beb\u8457\u8aaa\uff1a\u4e3b\u7684\u9748\u5728\u6211\u8eab\u4e0a\uff0c\u56e0\u70ba\u4ed6\u7528\u818f\u818f\u6211\uff0c\u53eb\u6211\u50b3\u798f\u97f3\u7d66\u8ca7\u7aae\u7684\u4eba\uff1b\u5dee\u9063\u6211\u5831\u544a\uff1a\u88ab\u64c4\u7684\u5f97\u91cb\u653e\uff0c\u778e\u773c\u7684\u5f97\u770b\u898b\uff0c\u53eb\u90a3\u53d7\u58d3\u5236\u7684\u5f97\u81ea\u7531\uff0c\u5831\u544a\u795e\u6085\u7d0d\u4eba\u7684\u79a7\u5e74\u3002\u65bc\u662f\u628a\u66f8\u6372\u8d77\u4f86\uff0c\u4ea4\u9084\u57f7\u4e8b\uff0c\u5c31\u5750\u4e0b\u3002\u6703\u5802\u88e1\u7684\u4eba\u90fd\u5b9a\u775b\u770b\u4ed6\u3002\u8036\u7a4c\u5c0d\u4ed6\u5011\u8aaa\uff1a\u4eca\u5929\u9019\u7d93\u61c9\u9a57\u5728\u4f60\u5011\u8033\u4e2d\u4e86\u3002\u300f\uff08\u8def4\uff1a17-21\uff09<br><br><br>\u770b\u898b\u6c92\uff1f<br>\u4e3b\u8036\u7a4c\u6210\u5c31\u4e86\u820a\u7d04\u5f8b\u6cd5\u898f\u5b9a\u7684\u79a7\u5e74\uff01<br>\u79a7\u5e74\u7684\u7cbe\u7fa9\uff0c\u5c31\u662f\u4e3b\u8036\u7a4c\u81ea\u5df1\uff01<br>\u5047\u4f7f\u6211\u5011\u6c92\u641e\u6e05\u695a\u91cd\u9ede\uff0c\u90a3\u6703\u4e82\u89e3\u4e00\u901a\uff0c\u89e3\u51fa\u53ef\u7b11\u7684\u820a\u7d04\u610f\u7fa9\u51fa\u4f86\uff01<br><br><br>\u6b63\u56e0\u70ba\u79a7\u5e74\u7684\u7cbe\u7fa9\uff0c\u5c31\u662f\u5728\u4e3b\u8036\u7a4c\u81ea\u5df1\uff0c<br>\u6240\u4ee5\uff0c\u4e3b\u8036\u7a4c\u6c92\u53eb\u4eba\u8981\u5b88\u5b89\u606f\u5e74\u3001\u79a7\u5e74\uff0c\u4f7f\u5f92\u5011\u6c92\u53eb\u4eba\u8981\u5b88\uff0c\u521d\u4ee3\u6559\u6703\u6c92\u4eba\u5728\u5b88\uff0c\u6b77\u4e16\u6b77\u4ee3\u7d14\u6b63\u4fe1\u4ef0\u7684\u773e\u6559\u6703\u6c92\u4eba\u5728\u5b88\u7684\u5566\uff01<br><br><br><br><br>\u4e03\u3001\t\u96e3\u9053\u820a\u7d04\u79a7\u5e74\u7684\u7d93\u6587\u5c0d\u6211\u5011\u73fe\u4eca\u4e0d\u518d\u6709\u610f\u7fa9\uff1f<br>\u7576\u7136\u4e0d\u662f\uff01<br>\u5373\u4f7f\u662f\u820a\u7d04\u7684\u5f88\u591a\u4e3b\u8036\u7a4c\u6210\u5168\u7684\u5f8b\u4f8b\uff0c\u4f9d\u7136\u5c0d\u6211\u5011\u6709\u5e6b\u52a9\u8207\u555f\u767c\u3002<br>\u4f46\u662f\uff0c\u5fc5\u9808\u662f\u5728\u6b63\u78ba\u7684\u89e3\u91cb\u4e4b\u4e0b\uff0c\u9032\u884c\u6b63\u78ba\u7684\u61c9\u7528\uff1b<br>\u800c\u4e0d\u662f\u4e82\u89e3\u5f37\u89e3\uff0c\u7136\u5f8c\u4e82\u61c9\u7528\u4e00\u901a\u3002<br><br><br>\u79a7\u5e74\u898f\u5b9a\u88e1\u9762\uff0c\u90a3\u7a2e\u5c0d\u4e0a\u5e1d\u7684\u656c\u754f\u3001\u5c0d\u65bc\u8a8d\u6e05\u81ea\u5df1\u5728\u4e16\u662f\u5bc4\u5c45\u8005\u7684\u770b\u91cd\u3001\u5c0d\u5927\u5730\u7ba1\u7406\u7684\u5584\u76e1\u672c\u5206\u3001\u5c0d\u7aae\u56f0\u8005\u7684\u6190\u61ab\u3001\u5c0d\u96c7\u5de5\u7684\u611b\u5fc3\u3001\u5c0d\u5916\u7c4d\u52de\u5de5\u7684\u611b\u5fc3\u3001\u5c0d\u4e0a\u5e1d\u7167\u9867\u990a\u80b2\u7684\u4fe1\u4efb\u3001\u3001\u3001\uff0c\u9019\u4e9b\u7cbe\u7fa9\uff0c\u6211\u5011\u5168\u90e8\u90fd\u5fc5\u9808\u9075\u5b88\u3002<br>\u554f\u984c\u662f\uff0c\u9019\u662f\u6bcf\u4e94\u5341\u5e74\u624d\u8981\u5b88\u4e00\u6b21\u55ce\uff1f<br>\u9084\u662f\u5929\u5929\u90fd\u8981\u52aa\u529b\u53bb\u505a\u3001\u5e73\u5e38\u5c31\u5fc5\u9808\u52aa\u529b\u53bb\u505a\uff1f<br><br><br>\u6211\u518d\u8b1b\u4e00\u6b21\uff1a<br>\u79a7\u5e74\u3001\u5b89\u606f\u5e74\u90a3\u7a2e\u8de8\u8d8a\u6642\u4ee3\u7684\u7cbe\u7fa9\uff0c\u662f\u6211\u5011\u5929\u5929\u90fd\u8981\u505a\u3001\u5e73\u5e38\u5c31\u8a72\u505a\u7684\u4e8b\u3002<br>\u4f46\u662f\uff0c\u79a7\u5e74\u3001\u5b89\u606f\u5e74\u90a3\u7a2e\u7279\u6b8a\u7684\u6642\u4ee3\u80cc\u666f\u898f\u5b9a\uff0c\u6211\u5011\u65e9\u5c31\u4e0d\u9700\u9075\u5b88\u4e86\uff0c\u56e0\u70ba\u60f3\u5b88\u4e5f\u5b88\u4e0d\u4e86\u3002<br><br><br>\u5225\u7684\u4e0d\u8b1b\uff0c\u6211\u5011\u8cb7\u623f\u5b50\u5e7e\u4e4e\u90fd\u5fc5\u9808\u80cc\u8ca0\u623f\u8cb8\u3002<br>\u6559\u6703\u5efa\u5802\u4e5f\u4e00\u6a23\uff0c\u4e5f\u591a\u534a\u90fd\u8981\u7528\u6559\u6703\u7522\u6b0a\u53bb\u8cb8\u6b3e\u3002<br>\u6211\u4e0d\u76f8\u4fe1\u9023\u90a3\u4e9b\u9f13\u5439\u79a7\u5e74\u7684\u7267\u5e2b\uff0c\u6562\u53bb\u5c0d\u9280\u884c\u8aaa\uff1a<br>\u4f9d\u7167\u8056\u7d93\uff0c\u8acb\u5c07\u623f\u8cb8\u7684\u571f\u5730\u50b5\u6b0a\u6b78\u9084\u7d66\u6211\uff01<br>\u6703\u53bb\u9019\u6a23\u505a\u7684\uff0c\u8981\u4e0d\u662f\u7cbe\u795e\u6709\u554f\u984c\uff0c\u5c31\u662f\u667a\u5546\u6709\u554f\u984c\uff01<br><br><br>\u63db\u8a00\u4e4b\uff0c\u90a3\u7a2e\u53d7\u6642\u4ee3\u80cc\u666f\u9650\u5236\u5c0e\u81f4\u6211\u5011\u4eca\u5929\u6839\u672c\u7121\u6cd5\u9054\u6210\u7684\u5b57\u9762\u610f\u601d\uff0c\u6211\u5011\u73fe\u4eca\u6839\u672c\u4e0d\u7528\u9f13\u5439\uff0c\u56e0\u70ba\u7121\u6cd5\u5be6\u884c\uff1b<br>\u800c\u90a3\u7a2e\u57fa\u7763\u5f92\u4eba\u4eba\u90fd\u8a72\u52aa\u529b\u6548\u6cd5\u8207\u5b78\u7fd2\u7684\u7cbe\u7fa9\uff0c\u662f\u8de8\u8d8a\u6240\u6709\u6642\u4ee3\u80cc\u666f\u7684\uff0c\u9019\u7a2e\u6839\u672c\u4e5f\u4e0d\u7528\u626f\u5230\u4ec0\u9ebc\u4e94\u5341\u5e74\u3001\u4e03\u5e74\u4f86\u8981\u6c42\u4fe1\u5f92\u5be6\u884c\uff0c\u800c\u662f\u5e73\u5e38\u5c31\u8a72\u5be6\u884c\u3002<br><br><br>\u6240\u4ee5\uff0c\u626f\u4e9b\u4ec0\u9ebc\u96d9\u79a7\u5e74\u5462\uff1f<br><br><br>\u5f1f\u5144\u59ca\u59b9\u5011\uff01\u4e0d\u8981\u518d\u7576\u611a\u6627\u4eba\u4e86\uff01<br>\u8a8d\u771f\u770b\u91cd\u6b63\u78ba\u89e3\u7d93\u8207\u61c9\u7528\u5427\uff1f<br>\u5047\u4f7f\u6c92\u6709\u667a\u6167\u5206\u8fa8\u7684\u8a71\uff0c\u597d\u6b79\u770b\u770b\u6b77\u4e16\u6b77\u4ee3\u773e\u8056\u5f92\u662f\u600e\u6a23\u505a\u7684\uff0c\u4e0d\u8981\u53bb\u81ea\u5df1\u4e82\u89e3\u4e00\u901a\uff0c\u641e\u51fa\u7b11\u6b7b\u4eba\u7684\u6240\u8b02\u300c\u65b0\u4eae\u5149\u300d\u3001\u300c\u65b0\u6559\u7fa9\u300d\u51fa\u4f86\u3002<br>\u90a3\u7a2e\u6771\u897f\uff0c\u53ea\u6703\u56de\u5230\u6bd4\u4e2d\u4e16\u7d00\u5929\u4e3b\u6559\u66f4\u611a\u6627\u7684\u6642\u4ee3\u800c\u5df2\u3002<br><br><br>\u96e3\u602a\u7f8e\u570b\u7684\u5927\u578b\u8abf\u67e5\u767c\u73fe\uff0c\u672a\u4fe1\u8005\u5c0d\u57fa\u7763\u5f92\u6709\u4e00\u500b\u5f88\u5927\u7684\u770b\u6cd5\uff0c\u5c31\u662f\uff1a<br>\u57fa\u7763\u6559\u662f\u53cd\u667a\u7684\u5b97\u6559\uff01<br>\u4fe1\u57fa\u7763\u6559\u6703\u4f7f\u4eba\u55aa\u5931\u601d\u8003\u80fd\u529b\uff0c\u800c\u4e14\u8d8a\u4f86\u8d8a\u7121\u529b\u601d\u8003\uff01<br><br><br>\u4e0a\u5e1d\u662f\u6709\u667a\u6167\u7684\u4e0a\u5e1d\uff0c<br>\u4e0a\u5e1d\u662f\u8d85\u8d8a\u4e16\u754c\u4e00\u5207\u667a\u6167\uff0c\u6bd4\u4e16\u9593\u4e00\u5207\u667a\u6167\u66f4\u6709\u667a\u6167\u7684\u4e0a\u5e1d\u3002<br>\u4e0a\u5e1d\u547c\u53ec\u6211\u5011\u9019\u7fa4\u611a\u6627\u7684\u4eba\u4f86\u4fe1\u5949\u7942\u3002<br>\u4f46\u662f\uff0c\u537b\u4e0d\u662f\u53eb\u6211\u5011\u8d8a\u4fe1\u8d8a\u7b28\uff0c\u800c\u662f\u8981\u6211\u5011\u8d8a\u4f86\u8d8a\u6709\u667a\u6167\u3002<br>\u5c07\u57fa\u7763\u6559\u4fe1\u6210\u611a\u6627\u5b97\u6559\uff0c\u662f\u57fa\u7763\u5f92\u7684\u6065\u8fb1\uff01\u662f\u6211\u5011\u7f9e\u8fb1\u4e0a\u5e1d\u540d\u865f\uff01<br>\u8acb\u773c\u775b\u653e\u4eae\uff01\u8166\u888b\u6e05\u9192\uff01<br>\u9760\u8056\u9748\u5927\u80fd\u7576\u500b\u667a\u6167\u4eba\uff0c\u800c\u4e0d\u8981\u8b8a\u6210\u8d8a\u4fe1\u8d8a\u7b28\u7684\u611a\u6627\u4eba\uff01<br><br><br><br><br><br><br>\u5c0f\u5c0f\u7f8a<br><br><br><br><br><br><br>", "images": [], "first_published_at": null}